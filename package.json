{
  "name": "novellang",
  "displayName": "novellang",
  "description": "A language for novel writing with consistency checking",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:novellang"
  ],
  "main": "./dist/extension.ts",
  "contributes": {
    "languages": [
      {
        "id": "novellang",
        "aliases": [
          "Novel Language",
          "novellang"
        ],
        "extensions": [
          ".novel",
          ".nvl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "novellang",
        "scopeName": "source.novellang",
        "path": "./syntaxes/novellang.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "novellang.checkConsistency",
        "title": "Check Story Consistency"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.30.1",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
